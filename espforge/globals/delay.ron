(
    name: "delay",

    requires: [],

    parameters: [],

    // Note: In the current dynamic template, delay is initialized manually in main.rs
    // but we define it here for future-proofing.
    setup_template: "let delay = Delay::new();",

    methods: {
        "delay_millis": (
            // {{ args }} captures the value passed in YAML (e.g. 500)
            template: "delay.delay_millis({{ args }});",
        ),
    },
)
